    <variables>
        <description>A short explanation of why the refund was issued, such as delayed delivery, missing items, or service quality.</description>
        <name>refundReason</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <description>A message providing details about the flow&apos;s execution, such as success confirmation or error messages.</description>
        <name>resultMessage</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Collection of Refund__c records created by this flow.</description>
        <name>returnedRefunds</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <objectType>Refund__c</objectType>
    </variables>
    <variables>
        <description>An optional Storefront Id to link the refund to a specific restaurant or location for demo scenarios.</description>
        <name>storefrontId</name>
